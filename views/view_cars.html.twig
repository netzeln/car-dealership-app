<html>
    <head>
        <meta charset="utf-8">
        <link href="css/styles.css" rel="stylesheet" type="text/css">
        <title>Cars For Sale</title>
    </head>
    <body>
        <h1>CARS FOR SALE</h1>

        {% if cars is not empty %}
            {% for car in cars %}
               <img src='{{car.getImage}}'>
                            <p> <strong>{{ car.getMakeModel }}</strong> </p>
                            <ul>
                                <li>${{car.getPrice}} </li>
                                <li>{{car.getMileage}}</li>
                            </ul>
            {% endfor %}
        {% endif %}
        {% if cars is empty %}
                <h1>There are no cars in your Price and Mileage range. Cheapskate.</h1>

        {% endif %}
    </body>
 </html>
